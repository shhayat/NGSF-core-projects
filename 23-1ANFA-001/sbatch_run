do
      path="${i%_R1*}";
      sample_name=${path##*/};
      sbatch ${SCRIPT_DIR}/02_trim_adaptors_and_redo_fastqc.sh "${DATA}/${sample_name}"
 done

#trim and fastqc for 22-1LICH-001
