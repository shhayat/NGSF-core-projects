DIR="/globalhome/hxo752/HPC/ngsf_git_repos/NGSF-core-projects/chip-seq/analysis/alignment"
labels="G1E_TAL1_rep1 G1E_TAL1_rep2 Input_rep1 Input_rep2"
bam_files=""
